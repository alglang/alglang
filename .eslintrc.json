{
  "env": {
    "browser": true,
    "es2020": true,
    "jest/globals": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": [
    "jest"
  ],
  "rules": {
    "arrow-parens": ["error", "as-needed"],
    "comma-dangle": ["error", "never"],
    "func-names": "off",
    "prefer-arrow-callback": "off",
    "import/extensions": ["error", "never", { "css": "always" }],
    "no-unused-expressions": "off",
    "no-unused-vars": ["error", {
      "argsIgnorePattern": "^_"
    }]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".css", ".vue"]
      }
    }
  }
}
